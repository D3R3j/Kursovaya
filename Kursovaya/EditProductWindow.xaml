<Window x:Class="Kursovaya.EditProductWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Редактировать товар" Height="350" Width="400">
    <Grid>
        <TextBox x:Name="NameTextBox" ToolTip="Название" Margin="80,10,10,280" />
        <TextBox x:Name="CategoryIDTextBox" ToolTip="ID категории" Margin="80,60,10,230" />
        <TextBox x:Name="QuantityTextBox" ToolTip="Количество" Margin="80,110,10,180" />
        <TextBox x:Name="PriceTextBox" ToolTip="Цена" Margin="80,160,10,130" />
        <TextBox x:Name="ExpiryDateTextBox" ToolTip="Срок годности (YYYY-MM-DD)" Margin="80,210,10,80" />
        <Button Content="Сохранить" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10" Click="SaveChanges_Click" />
        <TextBlock HorizontalAlignment="Left" Margin="5,10,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="44" Width="75"><Run Language="ru-ru" Text="Название:"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="5,60,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="44" Width="75"><Run Text="ID "/><Run Text="Категории"/><Run Language="ru-ru" Text=":"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="5,110,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="44" Width="75"><Run Text="Количество"/><Run Language="ru-ru" Text=":"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="5,160,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="44" Width="75"><Run Text="Цена"/><Run Language="ru-ru" Text=":"/></TextBlock>
        <TextBlock HorizontalAlignment="Left" Margin="5,210,0,0" TextWrapping="Wrap" VerticalAlignment="Top" Height="44" Width="75"><Run Language="ru-ru" Text="Срок годности:"/></TextBlock>
    </Grid>
</Window>
