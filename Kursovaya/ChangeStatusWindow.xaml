<Window x:Class="Kursovaya.ChangeStatusWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Изменить состояние" Height="200" Width="400">
    <Grid>
        <ComboBox x:Name="StatusComboBox" Margin="10,50,10,50" ItemsSource="{Binding}" SelectedIndex="0" />
        <Button Content="Сохранить" HorizontalAlignment="Center" VerticalAlignment="Bottom" Margin="10" Click="SaveStatus_Click" />
    </Grid>
</Window>
